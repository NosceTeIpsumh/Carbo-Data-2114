<% content_for :first_button_label, "Sign up" %>
<% content_for :first_button_path, new_user_registration_path %>

<% content_for :second_button_label, "Forgot your password?" %>
<% content_for :second_button_path, new_user_password_path %>


<h2 class="text-center mt-4 mb-3">Log in</h2>

<div class="card p-4 shadow-sm" style="max-width: 420px; margin: 0 auto;">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>

      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions mt-3">
      <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>
