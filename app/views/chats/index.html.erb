              <div class="div-button delete-button rounded-5">
                <p>Delete</p>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <h1 class="text-center">Please chat with our SuperCarbo BOT first! ðŸ¤–</h1>
      <% end %>
    </div>
  </div>
</div>
